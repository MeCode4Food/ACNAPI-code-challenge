<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPageActivity">

    <LinearLayout
        android:id="@+id/user_pictures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="5dp"/>

        <ImageView
            android:id="@+id/user_qr"
            android:background="@drawable/qrcode"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_below="@id/user_pictures"
        android:id="@+id/name_header"
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"/>
    <TextView
        android:id="@+id/email_header"
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_below="@id/name_header"/>
    <TextView
        android:id="@+id/points_header"
        android:text="Points: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_below="@id/email_header"/>

<!--values-->
    <TextView
        android:layout_below="@id/user_pictures"
        android:id="@+id/user_name_text"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"/>
    <TextView
        android:id="@+id/user_email_text"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_below="@id/name_header"/>
    <TextView
        android:id="@+id/user_points_text"
        android:text="Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_below="@id/user_email_text"/>

    <Button
        android:id="@+id/button_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:text="ok"/>

</RelativeLayout>